extends cabinet/cabinetLayout
block append customcss
  link(rel='stylesheet', href='/resources/css/newSearches.css')
block information
  p.saveSearchText СОХРАНЕННЫЕ ПАРАМЕТРЫ ПОИСКА
    for searchVariant in searchVariants
      .savingSearch
        a.deleteSearch(href='#')
          img(src='/resources/images/deleteNotActive.png')
        a.editSearch(href='#{uri.uri("/new/user/userprofile/editSearch.html?id=" + searchVariant.id)}')
          img(src='/resources/images/editActive.png')
        .nameAndCategory
          a.thingName(href='#{uri.uri("/new/advertisement/list.html?keyWords=" + searchVariant.keyWords + "&categories=" + searchVariant.getRealCategories())}') #{searchVariant.keyWords}
          p.categoryName #{searchVariant.getRealCategories()}
        //a.tag(href='#') инструменты
        //a.tag(href='#') струнные
        //a.tag(href='#') укулеле
      p.spacer
