<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <!--param name="File" value="${catalina.home}/logs/n-exchange.log" /-->
        <param name="File" value="/home/sevenbits/Projects/n-exchange.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %c{1}.%M(%L) | %m%n"/>
        </layout>
    </appender>

    <logger name="org.apache">
        <level value="ERROR"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.springframework">
        <level value="ERROR"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.hibernate">
        <level value="ERROR"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.aopalliance">
        <level value="ERROR"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="AspectJ Weaver">
        <level value="ERROR"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="it.sevenbits">
        <level value="ERROR"/>
        <appender-ref ref="FILE"/>
    </logger>

</log4j:configuration>
